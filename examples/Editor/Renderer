#pragma once

#include <QWidget>

class RendererImpl;

typedef uintptr_t RenderHandle;

class Renderer : public QWidget
{
public:

    Renderer(QWidget* parent);

    // create a shape with given texture and position, returns an identifier
    RenderHandle createShape(const QString& path, const QPoint& pos, const QRect& rect, int zindex);

    // destroy shape previously created with createShape
    void destroyShape(RenderHandle identifier);

    // update transform of shape previously created with createShape
    void updateShape(RenderHandle identifier, const QPoint& pos, const QRect& rect, int zindex);

    // install event handler receiving events from view
    void installRendererEventFilter(QObject*);
private:
    RendererImpl* _impl;
};

