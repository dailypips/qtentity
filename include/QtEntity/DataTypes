#include <QMetaType>
#include <cstdint>
#include <tuple>

namespace QtEntity
{
    /**
     * @brief EntityId identifies an entity.
     * Each entity is identified by a unique EntityId. The id is assigned
     * at runtime and is completely arbitrary. All components are indexed by
     * this entity id.
     * EntityIds should be created by EntityManager::createEntityId.
     */
    typedef uint32_t EntityId;

    /**
     * Identifier for component classes
     */
    typedef uint32_t ClassTypeId;

    // definitions for vector data types
    typedef std::tuple<float,float> Vec2f;
    typedef std::tuple<double,double> Vec2d;
    typedef std::tuple<float,float,float> Vec3f;
    typedef std::tuple<double,double,double> Vec3d;
    typedef std::tuple<float,float,float,float> Vec4f;
    typedef std::tuple<double,double,double,double> Vec4d;
}

// have to do this in global namespace
Q_DECLARE_METATYPE(QtEntity::EntityId)
Q_DECLARE_METATYPE(QtEntity::Vec2f)
Q_DECLARE_METATYPE(QtEntity::Vec2d)
Q_DECLARE_METATYPE(QtEntity::Vec3f)
Q_DECLARE_METATYPE(QtEntity::Vec3d)
Q_DECLARE_METATYPE(QtEntity::Vec4f)
Q_DECLARE_METATYPE(QtEntity::Vec4d)

namespace QtEntity
{
    /**
     * @brief This has to be called once in an application to make data types
     * available for signal/slot connections
     */
    inline void registerMetaTypes()
    {
        qRegisterMetaType<QtEntity::EntityId>("QtEntity::EntityId");
        qRegisterMetaType<QtEntity::Vec2f>("QtEntity::Vec2f");
        qRegisterMetaType<QtEntity::Vec2d>("QtEntity::Vec2d");
        qRegisterMetaType<QtEntity::Vec3f>("QtEntity::Vec3f");
        qRegisterMetaType<QtEntity::Vec3d>("QtEntity::Vec3d");
        qRegisterMetaType<QtEntity::Vec4f>("QtEntity::Vec4f");
        qRegisterMetaType<QtEntity::Vec4d>("QtEntity::Vec4d");
    }
}