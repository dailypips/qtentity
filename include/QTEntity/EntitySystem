#pragma once

#include <QTEntity/Export>
#include <QTEntity/Component>
#include <QTEntity/DataTypes>
#include <QObject>

namespace qte
{
    class QTENTITY_EXPORT EntitySystem : public QObject
    {

        Q_OBJECT

    public:

        virtual ~EntitySystem() {}

        virtual Component* get(EntityId) const = 0;
        virtual Component* create(EntityId) = 0;
        virtual bool destroy(EntityId) = 0;

    };
}
